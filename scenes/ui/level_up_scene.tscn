[sub_resource type="Shader" id="Shader_1"]
code = "shader_type canvas_item;

uniform vec4 color1 : source_color = vec4(0.18, 0.11, 0.31, 1.0);
uniform vec4 color2 : source_color = vec4(0.10, 0.30, 0.37, 1.0);
uniform vec4 color3 : source_color = vec4(0.29, 0.12, 0.25, 1.0);
uniform float speed : hint_range(0.0, 5.0) = 1.0;

void fragment() {
	vec2 uv = UV;
	
	float angle = TIME * speed * 0.2;
	vec2 rotated_uv = vec2(
		cos(angle) * (uv.x - 0.5) - sin(angle) * (uv.y - 0.5) + 0.5,
		sin(angle) * (uv.x - 0.5) + cos(angle) * (uv.y - 0.5) + 0.5
	);
	
	float gradient = rotated_uv.x + rotated_uv.y * 0.5;
	gradient = gradient + sin(TIME * speed) * 0.2;
	
	vec4 color;
	if (gradient < 0.33) {
		color = mix(color1, color2, gradient * 3.0);
	} else if (gradient < 0.66) {
		color = mix(color2, color3, (gradient - 0.33) * 3.0);
	} else {
		color = mix(color3, color1, (gradient - 0.66) * 3.0);
	}
	
	COLOR = color;
}
"

